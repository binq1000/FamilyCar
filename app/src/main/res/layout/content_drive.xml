<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="me.tim.org.familycar_kotlin.uiClasses.DriveActivity"
    tools:showIn="@layout/activity_drive">

    <Button
        android:id="@+id/btnStartDrive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_start_drive"/>

    <Button
        android:id="@+id/btnStopDrive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_stop_drive"
        app:layout_constraintTop_toBottomOf="@id/btnStartDrive"/>

    <TextView
        android:id="@+id/tvRpm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btnStopDrive"
        android:text="Toeren: "/>

    <TextView
        android:id="@+id/tvSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvRpm"
        android:text="Speed: "/>

    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvSpeed"
        android:text="Locatie: "/>

    <me.tim.org.familycar_kotlin.uiClasses.Circle
        android:id="@+id/circle"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@+id/tvLocation"/>


</android.support.constraint.ConstraintLayout>
